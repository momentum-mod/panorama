<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
	</styles>

	<scripts>
		<include type="module" src="file://{scripts}/util/dont-show-again.ts" />
	</scripts>

	<PopupCustomLayout class="PopupPanel Hidden generic-popup generic-popup--large" popupbackground="blur">
		<Panel class="flow-down">
			<Label class="text-h1 mb-4 w-full text-align-center" text="#Playtest_Welcome_Title" />
			<Label class="mb-2" text="#Playtest_Welcome_Acknowledge" />
			<ToggleButton class="checkbox mb-2">
				<Label class="mb-2" text="#Playtest_Welcome_Acknowledge_1" />
			</ToggleButton>
			<ToggleButton class="checkbox mb-2">
				<Label class="mb-2" text="#Playtest_Welcome_Acknowledge_2" />
			</ToggleButton>
			<ToggleButton class="checkbox mb-2">
				<Label class="mb-2" text="#Playtest_Welcome_Acknowledge_3" />
			</ToggleButton>
			<Label class="mb-4" text="#Playtest_Welcome_Acknowledge_End" />
		</Panel>

		<Panel class="flow-right w-full">
			<ToggleButton id="DontShowAgainCheckbox" class="checkbox v-align-center mr-4">
				<Label text="#Common_DontShowAgain" />
			</ToggleButton>
			<Button class="button button--blue h-align-right" onactivate="DosaPopupHandler.onSubmit()">
				<Label class="button__text" text="#Common_IUnderstand" />
			</Button>
		</Panel>
	</PopupCustomLayout>

</root>
