<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
	</styles>

	<scripts>
		<include type="module" src="file://{scripts}/modals/popups/playtest-welcome.ts" />
	</scripts>

	<PopupCustomLayout class="PopupPanel Hidden generic-popup generic-popup--large" popupbackground="blur">
		<Panel class="flow-down">
			<Label class="text-h3 mb-3 w-full" text="#Playtest_010_Welcome" />
			<Label class="mb-4" text="#Playtest_010_Header" />
			<ToggleButton id="Checkbox1" class="checkbox mb-3">
				<Label text="#Playtest_010_Ack1"/>
			</ToggleButton>
			<ToggleButton id="Checkbox2" class="checkbox mb-3">
				<Label text="#Playtest_010_Ack2"/>
			</ToggleButton>
			<ToggleButton id="Checkbox3" class="checkbox mb-3 text-bold">
				<Label text="#Playtest_010_Ack3"/>
			</ToggleButton>
		</Panel>

		<Panel class="flow-right w-full">
			<Button id="AcceptButton" class="button button--blue h-align-right">
				<Label class="button__text" text="#Common_IUnderstand" />
			</Button>
		</Panel>
	</PopupCustomLayout>

</root>
