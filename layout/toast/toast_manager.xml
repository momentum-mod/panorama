<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/common/gameui.js" />
		<include src="file://{resources}/scripts/toastmanager.js" />
	</scripts>

	<Panel class="full-width full-height" hittest="false" hittestchildren="false">
		<ConVarEnabler
			class="toast-manager"
			hittest="false"
			hittestchildren="false"
			convar="mom_ui_toasts_enable"
			togglevisibility="true"
		>
			<Panel id="Center" class="toast-manager__center" />
			<Panel id="Left" class="toast-manager__left" />
			<Panel id="Right" class="toast-manager__right" />
		</ConVarEnabler>
	</Panel>
</root>
