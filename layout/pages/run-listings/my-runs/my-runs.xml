<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
	</styles>

	<MyRuns class="myruns" acceptsinput="true" acceptsfocus="true" hittest="true" hittestchildren="true">
		<Panel class="myruns__filters">
			<ToggleButton class="checkbox first">
				<Label text="All Tracks" />
			</ToggleButton>
			<ToggleButton class="checkbox">
				<Label text="Personal Bests Only" />
			</ToggleButton>
		</Panel>
		<Panel class="runlisting">
			<Panel class="runlisting__header">
				<Label class="runlisting-cell runlisting-cell__track" text="Track" />
				<Label class="runlisting-cell runlisting-cell__time" text="#Leaderboards_Column_Time" />
				<Label class="runlisting-cell runlisting-cell__tags" text="Tags" />
				<Label class="runlisting-cell runlisting-cell__dateachieved" text="#Leaderboards_Column_Date" />
			</Panel>
			<Panel class="runlisting__list-container">
				<DelayLoadList id="MyRunsList" class="runlisting__list" itemheight="30px" itemwidth="100%" spacersize="0px" spacerperiod="1">
				</DelayLoadList>
			</Panel>
		</Panel>
	</MyRuns>
</root>
