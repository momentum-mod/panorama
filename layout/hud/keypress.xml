<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
	</styles>

	<MomHudKeyPress class="keypress">
		<Panel>
			<Panel class="keypress__arrows keypress-arrows">
				<Panel id="KeyForward" class="keypress-arrows__key keypress-key__forward" text="Forward">
					<Image
						id="KeyForwardIcon"
						class="keypress-arrows__icon keypress-icon__forward"
						src="file://{images}/right-arrow.svg"
						textureheight="32"
					/>
				</Panel>
				<Panel id="KeyBack" class="keypress-arrows__key keypress-key__back" text="Back">
					<Image
						id="KeyBackIcon"
						class="keypress-arrows__icon keypress-icon__back"
						src="file://{images}/right-arrow.svg"
						textureheight="32"
					/>
				</Panel>
				<Panel id="KeyMoveLeft" class="keypress-arrows__key keypress-key__left" text="Left">
					<Image
						id="KeyMoveLeftIcon"
						class="keypress-arrows__icon keypress-icon__left"
						src="file://{images}/right-arrow.svg"
						textureheight="32"
					/>
				</Panel>
				<Panel id="KeyMoveRight" class="keypress-arrows__key keypress-key__right" text="Right">
					<Image
						id="KeyMoveRightIcon"
						class="keypress-arrows__icon keypress-icon__right"
						src="file://{images}/right-arrow.svg"
						textureheight="32"
					/>
				</Panel>
			</Panel>

			<Label id="KeyMouse1" class="keypress__key keypress-key__m1" text="A1" />
			<Label id="KeyMouse2" class="keypress__key keypress-key__m2" text="A2" />
		</Panel>

		<Label id="KeyJump" class="keypress__key" text="JUMP" />
		<Label id="KeyDuck" class="keypress__key" text="DUCK" />
		<Label id="KeyWalk" class="keypress__key" text="WALK" />
		<Label id="KeyStrafe" class="keypress__key keypress__unimplemented" text="STRAFE" />
		<Label id="KeySprint" class="keypress__key" text="SPRINT" />

		<Label id="KeyLeft" class="keypress__key keypress__unimplemented" text="" />
		<Label id="KeyRight" class="keypress__key keypress__unimplemented" text="" />

		<Label id="CountStrafes" class="keypress__key" text="{i:strafes}" />
		<Label id="CountJumps" class="keypress__key" text="{i:jumps}" />
	</MomHudKeyPress>
</root>
