<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
	</styles>
	
	<scripts>
		<include type="module" src="file://{scripts}/hud/comparisons.ts" />
	</scripts>

	<HudComparisons class="hud-comparisons">
		<ConVarEnabler class="w-fit-children" convar="mom_hud_comparisons_enable" togglevisibility="true">
			<Panel class="hud-comparisons__splits hud-splits">
				<!-- Each column populated in JS -->
				<Panel id="SplitNames" class="hud-splits__column" />
				<Panel id="SplitTimes" class="hud-splits__column" />
				<Panel id="SplitDiffs" class="hud-splits__column" />
			</Panel>
		</ConVarEnabler>
	</HudComparisons>
</root>
