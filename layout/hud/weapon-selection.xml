<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/common/weapon.js" />
		<include src="file://{resources}/scripts/hud/weapon-selection.js" />
	</scripts>

	<snippets>
		<snippet name="Weapon">
			<Panel class="weaponselection__wrapper">
				<Panel class="weaponselection__notch" />
				<ConVarEnabler
					class="width-fit-children height-fit-children vertical-align-center"
					convar="mom_hud_weaponselection_keybind_enable"
					togglevisibility="true"
				>
					<Label id="WeaponKeyBind" class="weaponselection__keybind" text="" />
				</ConVarEnabler>
				<Label class="weaponselection__weplabel" text="{s:weapon}" />
			</Panel>
		</snippet>
	</snippets>

	<MomHudWeaponSelection class="full-width">
		<ConVarEnabler
			id="WeaponSelection"
			class="weaponselection"
			convar="mom_hud_weaponselection_enable"
			togglevisibility="true"
		>
		</ConVarEnabler>
	</MomHudWeaponSelection>
</root>
