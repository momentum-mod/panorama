<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
	</styles>
  

	<ChaosSettingsSlider class="settings-slider">
		<Panel class="settings-slider__title-container">
			<Label class="settings-slider__title" id="Title" />
		</Panel>
		<Panel class="settings-slider__input-container">
			<Slider
				class="slider slider--horizontal settings-slider__slider"
				showdefault="true"
				direction="horizontal"
				id="Slider"
			/>
			<TextEntry class="textentry settings-slider__textentry" maxchars="4" textmode="numeric" id="Value" />
		</Panel>
	</ChaosSettingsSlider>
</root>
