{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext"],
		// Dynamic imports, import.meta, top-level await and import attributes are all unsupported.
		"module": "ES2015",
		"baseUrl": "scripts/",
		"rootDir": "scripts/",
		"allowJs": true,
		"alwaysStrict": true,
		"isolatedModules": false,
		// Enable every strict mode option *besides* strictNullChecks, they're just too annoying!
		"strict": true,
		"strictNullChecks": false,
		"experimentalDecorators": true,
		"typeRoots": ["./scripts/types-mom"], // If you error here, you don't have the submodule installed! (git submodule update --init --recursive)
		"sourceMap": true
	},
	"include": ["scripts/"],
	"exclude": ["scripts/types/p2ce/**/*"]
}
