{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ESNext"],
		"module": "None",
		"rootDir": "scripts/",
		"outDir": "script_dist/",
		"alwaysStrict": true,
		"isolatedModules": true,
		"allowJs": true,
		// Enable every strict mode option *besides* strictNullChecks, they're just too annoying!
		"strict": true,
		"strictNullChecks": false,
		"typeRoots": ["./scripts/types/"],
		"types": ["momentum"] // If you error here, you don't have the submodule installed! (git submodule update --init --recursive)
	},
	"include": ["scripts/"],
	"exclude": ["*.d.ts"]
}
